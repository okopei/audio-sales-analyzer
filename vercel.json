{
  "version": 2,
  "builds": [
    {
      "src": "next-app/package.json",
      "use": "@vercel/next",
      "config": {
        "rootDirectory": "next-app"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "next-app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/next-app/$1"
    }
  ]
} 